<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera" p1default="defaultCamera" p2default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="20" z="0.01" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="0" y="4" z="0" w="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="octagonTileTex" file="scenes/images/p1pieces.jpg" />
        <texture id="squareTileTex" file="scenes/images/p2pieces.jpg" />
        <texture id="p1PiecesTex" file="scenes/images/lightwood.jpg" />
        <texture id="p2PiecesTex" file="scenes/images/darkwood.jpg" />
    </textures>

    <materials>
        <material id="tilesMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
        <material id="piecesMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0" b="0.4" a="1.0" />
            <diffuse r="0" g="0" b="1" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="board">
            <board width="5" height="5" />
        </primitive>

        <primitive id="octagon">
            <regpolygon nsides="8" apothem="0.5" />
        </primitive>
        <primitive id="square">
            <regpolygon nsides="4" apothem="0.5" />
        </primitive>

        <primitive id="octagonPiecePrism">
            <prism nsides="8" apothem="0.5" height="0.2" />
        </primitive>

        <primitive id="squarePiecePrism">
            <prism nsides="4" apothem="0.5" height="0.2" />
        </primitive>

        <primitive id="plane">
            <plane npartsU="10" npartsV="10" />
        </primitive>

    </primitives>

    <components>
        <!-- Game related components -->
        <component id="octagonTile">
            <transformation>
                <rotate axis="y" angle="22.5" />
            </transformation>
            <materials>
                <material id="tilesMaterial" />
            </materials>
            <texture id="octagonTileTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="octagon" />
            </children>
        </component>
        <component id="squareTile">
            <transformation>
            </transformation>
            <materials>
                <material id="tilesMaterial" />
            </materials>
            <texture id="squareTileTex" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>


        <component id="octagonPiece">
            <transformation>
                <rotate axis="y" angle="22.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="octagonPiecePrism" />
                <componentref id="octagonPieceTop" />
            </children>
        </component>
        <component id="octagonPieceTop">
            <transformation>
                <translate x="0" y="0.2" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="octagon" />
            </children>
        </component>

        <component id="squarePiece">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="squarePiecePrism" />
                <componentref id="squarePieceTop" />
            </children>
        </component>
        <component id="squarePieceTop">
            <transformation>
                <translate x="0" y="0.2" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="squarePieceP1">
            <transformation>
            </transformation>
            <materials>
                <material id="piecesMaterial" />
            </materials>
            <texture id="p1PiecesTex" length_s="1" length_t="1" />
            <children>
                <componentref id="squarePiece" />
            </children>
        </component>
        <component id="octagonPieceP1">
            <transformation>
            </transformation>
            <materials>
                <material id="piecesMaterial" />
            </materials>
            <texture id="p1PiecesTex" length_s="1" length_t="1" />
            <children>
                <componentref id="octagonPiece" />
            </children>
        </component>

        <component id="squarePieceP2">
            <transformation>
            </transformation>
            <materials>
                <material id="piecesMaterial" />
            </materials>
            <texture id="p2PiecesTex" length_s="1" length_t="1" />
            <children>
                <componentref id="squarePiece" />
            </children>
        </component>
        <component id="octagonPieceP2">
            <transformation>
            </transformation>
            <materials>
                <material id="piecesMaterial" />
            </materials>
            <texture id="p2PiecesTex" length_s="1" length_t="1" />
            <children>
                <componentref id="octagonPiece" />
            </children>
        </component>

        <component id="plane">
            <transformation>
                <translate x="0" y="-0.2" z="0" />
                <scale x="6" y="1" z="6" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="plane" />
            </children>
        </component>


        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="board" />
                <componentref id="plane" />
            </children>
        </component>
    </components>
</lxs>
