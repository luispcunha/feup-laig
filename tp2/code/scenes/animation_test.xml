<lxs>
    <scene root="demoRoot" axis_length="1"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="0" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="0" y="10" z="0" w="0.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />            
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/gold_texture.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="1" y="0" z="0"/>
        </transformation>
    </transformations>

    <animations>


        <animation id="test_animation2">
            <keyframe instant="2">
                <translate x="1" y="0" z="0"/>
                <rotate angle_x="90" angle_y="0" angle_z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </keyframe>

            <keyframe instant="4">
                <translate x="0" y="0" z="0"/>
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
    </primitives>

    <components>

        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0"/>
            </transformation>
            <animationref id="test_animation2"/>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

    </components>
</lxs>