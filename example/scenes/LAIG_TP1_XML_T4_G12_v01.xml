<lxs>
    <scene root="springfield" axis_length="1"/>
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>
    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>
    <lights>
        <omni id="default" enabled="1">
            <location x="50" y="30" z="50" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>
    <textures>
        <texture id="default" file="scenes/images/bank.jpg"/>
    </textures>
    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>
    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation  id="baseChimneyTransformation">
            <rotate axis="x" angle="-90" />
        </transformation>
    </transformations>
    <primitives>
        <primitive id="upper-chimney">
            <cylinder base="2" top="2.3" height="2" stacks="8" slices="38" />
        </primitive>
        <primitive id="mid-chimney">
            <cylinder base="2" top="2" height="0.2" stacks="8" slices="38" />
        </primitive>
        <primitive id="lower-chimney">
            <cylinder base="3" top="2" height="5" stacks="8" slices="32" />
        </primitive>
        <primitive id="homer-head">
            <sphere radius="0.5" slices="32" stacks="16" />
        </primitive>
        <primitive id="homer-body">
            <sphere radius="2" slices="32" stacks="16" />
        </primitive>
        <primitive id="homer-arm">
            <cylinder base="0.06" top="0.07" height="1" stacks="2" slices="16" />
        </primitive>
        <primitive id="donut">
            <torus inner="0.5" outer="2.5" slices="32" loops="32" />
        </primitive>
    </primitives>
    <components>
        <component id="springfield">
            <transformation>
                <scale x="0.3" y="0.3" z="0.3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="default" length_s="1" length_t="1" />
            <children>
                <componentref id="chimneys" />
            </children>
        </component>
        <component id="chimneys">
            <transformation>
                <scale x="0.5" y="0.45" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="chimney1" />
                <componentref id="chimney2" />
            </children>
        </component>
        <component id="chimney1">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="baseChimney" />
            </children>
        </component>
        <component id="chimney2">
            <transformation>
                <translate x="6" y="0" z="0" />
                <scale x="0.8" y="0.8" z="0.8" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="baseChimney" />
            </children>
        </component>
            
        <component id="baseChimney">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="lowerChimney" />
                <componentref id="midChimney" />
                <componentref id="upperChimney" />
            </children>
        </component>

        <component id="upperChimney">
            <transformation>
                <translate x="0" y="5.2" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="upper-chimney" />
            </children>
        </component>

        <component id="lowerChimney">
            <transformation>
                <translate x="0" y="0" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="lower-chimney" />
            </children>
        </component>

        <component id="midChimney">
            <transformation>
                <translate x="0" y="5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="mid-chimney" />
            </children>
        </component>

    </components>
</lxs>