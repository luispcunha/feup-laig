<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.6" g="0.6" b="0.6" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="floorRectangle">
            <rectangle x1="-25" x2="25" y1="-25" y2="25" />
        </primitive>

        <!-- chimney related primitives -->

        <primitive id="chimneyBaseTorus">
            <torus inner="0.5" outer="4.4" slices="5" loops="24" />
        </primitive>
        <primitive id="chimneyLayer1Cylinder">
            <cylinder base="4.4" top="3.6" height="3" stacks="6" slices="32" />
        </primitive>
        <primitive id="chimneyLayer2Cylinder">
            <cylinder base="3.6" top="3.2" height="2" stacks="4" slices="32" />
        </primitive>
        <primitive id="chimneyLayer3Cylinder">
            <cylinder base="3.2" top="3" height="2" stacks="4" slices="32" />
        </primitive>
        <primitive id="chimneyLayer4Cylinder">
            <cylinder base="3" top="3" height="1.8" stacks="4" slices="32" />
        </primitive>
        <primitive id="chimneyLayer5Cylinder">
            <cylinder base="3" top="3.2" height="1.8" stacks="4" slices="32" />
        </primitive>
        <primitive id="chimneyTopTorus">
            <torus inner="0.15" outer="3" slices="5" loops="24" />
        </primitive>
        <primitive id="smokeRingTorus">
            <torus inner="1.8" outer="1.5" slices="12" loops="24" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="chimney" />
                <componentref id="floor" />
            </children>
        </component>

        <component id="floor">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="floorRectangle" />
            </children>
        </component>

        <component id="chimney">
            <transformation>
                <translate x="-5" y="5" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyBaseTorus" />
                <primitiveref id="chimneyLayer1Cylinder" />
                <componentref id="chimneyLayer2" />
                <componentref id="chimneyLayer3" />
                <componentref id="chimneyLayer4" />
                <componentref id="chimneyLayer5" />
                <componentref id="chimneyTop" />
                <componentref id="smokeRingPatch" />
            </children>
        </component>

        <component id="chimneyLayer2">
            <transformation>
                <translate x="0" y="0" z="3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyLayer2Cylinder" />
            </children>
        </component>

        <component id="chimneyLayer3">
            <transformation>
                <translate x="0" y="0" z="5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyLayer3Cylinder" />
            </children>
        </component>

        <component id="chimneyLayer4">
            <transformation>
                <translate x="0" y="0" z="7" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyLayer4Cylinder" />
            </children>
        </component>

        <component id="chimneyLayer5">
            <transformation>
                <translate x="0" y="0" z="8.8" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyLayer4Cylinder" />
            </children>
        </component>

        <component id="chimneyTop">
            <transformation>
                <translate x="0" y="0" z="10.6" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chimneyTopTorus" />
            </children>
        </component>

        <component id="smokeRingPatch">
            <transformation>
                <translate x="0" y="0" z="12" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="smokeRing1" />
                <componentref id="smokeRing2" />
                <componentref id="smokeRing3" />
                <componentref id="smokeRing4" />    
            </children>
        </component>

        <component id="smokeRing1">
            <transformation>
                <scale x="1" y="1" z="0.8" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="smokeRingTorus" />
            </children>
        </component>

        <component id="smokeRing2">
            <transformation>
                <translate x="0" y="1.2" z="2.5" />
                <scale x="1.3" y="1.3" z="0.9" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="smokeRingTorus" />
            </children>
        </component>

        <component id="smokeRing3">
            <transformation>
                <translate x="0" y="1.8" z="5" />
                <scale x="1.1" y="1.1" z="0.9" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="smokeRingTorus" />
            </children>
        </component>

        <component id="smokeRing4">
            <transformation>
                <translate x="0" y="2.4" z="7" />
                <scale x="0.8" y="0.8" z="0.8" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="smokeRingTorus" />
            </children>
        </component>
    </components>
</lxs>